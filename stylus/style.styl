.belt__pic
  position: relative;

  flex: 0 1 100%
  z-index: 1
  align-self: flex-end;

  margin: (-($step*7)) (-($step*2)) (-($step*2)) 0

.belt__content
  position: relative;

  display: flex;
  flex-direction: column;
  justify-content: space-between;
  z-index: 2

.belt_bg_2 .belt__content
  width: 60%

.belt__footer
  padding-top: 1vmax

  line-height: 0.8

.belt p
  margin-bottom: 2vmax

@media only screen and (max-width: $mediaQuery2)
  .belt
    top: -0.3vmax

    flex-direction: column;

  .belt__pic
    margin-top: (-($step*4));
  
  .belt_bg_2
