    margin-right: 0
    margin-bottom: $step;

// burger
.burger
  position fixed
  top: ($step*2)
  right $step

  display: none;
  z-index: 200

  width: ($step*5)
  height: ($step*5)

.burger_on .burger
  pointer-events none

.burger__ico
  position: absolute;
  top: ($step*1.9)
  right: $step
  bottom: ($step*1.9)
  left: $step

  pointer-events none

  border-top: 0.15em solid $color.text
  //border-bottom: 0.15em solid $color.text

  transform rotate(0)

  transition transform 0.2s ease

.burger__ico:after
  position: absolute;
  right: 0
  bottom: 0
  left: 0

  height: 0

  content ''

  border-bottom: 0.15em solid

  transform rotate(0)
  transform-origin 50% 50%

  transition all 0.2s ease

.burger_on .burger__ico
  transform rotate(45deg)

.burger_on .burger__ico:after
  bottom: 100%

  transform rotate(90deg)
  transform-origin 50% 50%

@media only screen and (max-width: $mediaQuery2)
  .burger
    display: block;