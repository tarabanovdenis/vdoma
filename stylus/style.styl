@font-face
  font-family 'Fixel'
  src url('../fonts/FixelVariable.woff2') format('woff2')
  font-style normal

@font-face
  font-family 'NAMU-1750'
  src url('../fonts/NAMU-1750.woff2') format('woff2')
  font-style normal


@require 'lib/reset.styl'
@require 'lib/variables.styl'
@require 'lib/mixins.styl'
@require 'lib/animations.styl'

//stylus stylus/ -o css/ -w

//@media only screen and (max-width: $mediaQuery1)

html
  height: 100%

  -webkit-font-smoothing: antialiased
  -webkit-tap-highlight-color: transparent
  -ms-text-size-adjust: 100%
  -webkit-text-size-adjust: 100%
  -webkit-font-smoothing: antialiased
  -moz-osx-font-smoothing: grayscale

body
  font-family: 'Fixel', sans-serif
  fontFix()
  //font-size: 23px
  font-size: 1.74vmax
  font-weight: 500

  height: 100%
  min-height: 500px

  text-align: left
  line-height: 1.38

  background: $color.bg
  color: $color.text

.burger_on
  overflow: hidden;

@media only screen and (max-width: $mediaQuery1)
  body
    font-size: 2.4vmax

// base media
@media only screen and (max-width: $mediaQuery2)
  .m-desktop
    display: none !important;

@media only screen and (min-width: $mediaQuery2)
  .m-mobile
    display: none !important;


// js-parallax
.js-parallax
  display: block


// noise
.noise
  z-index: 2

  position: fixed
  top: -100%
  left: -50%
  right: -50%
  bottom: -50%

  width: 200%
  height: 300%

  pointer-events none

  background: transparent url('../img/noise.png') repeat 0 0

  animation: noise 8s steps(10) infinite
  opacity: .9
  visibility: visible

.preloader
  position: fixed;
  top: 0
  left: 0

  width: 100%
  height: 100%

  pointer-events none

  animation hidePreloader 0.1s linear 6s

.preloader__icon
  ico('../img/preloader.png')

  position: fixed;
  top: -20%
  left: 120%

  animation preloader 2s ease-in 2s

// ico
.ico
  position: relative;

  display: inline-block;

  vertical-align: middle;

.ico-arrow
  ico('../img/arrow_big_yellow.svg')

.ico-arrow_middle
  ico('../img/arrow_middle_yellow.svg')

.help .ico-arrow
  margin-left: $step

  transform rotate(0)

  transition: all 0.3s ease

.help:hover .ico-arrow
  margin-left: ($step*3)

  transform rotate(45deg)

.ico-help
  ico('../img/nav-help_middle.svg')

.help_minified .ico-help,
.help_minified .ico-arrow_middle
  transform: rotate(0)

  transition: transform 0.3s ease

.help_minified:hover .ico-help
  transform: rotate(10deg)

.help_minified:hover .ico-arrow_middle
  transform: rotate(45deg)

nav .help_minified
  display: none;


@media only screen and (max-width: $mediaQuery2)
  .help .ico-arrow
    float: right;

    width: 6.2vmax;
    height: 6.5vmax

    background-size: 100% auto;

  .help_minified .ico-help,
  .help_minified .ico-arrow_middle
    float: right;

  nav .help_minified
    display: block;

    align-self stretch
    text-transform: none;

    background: $color.text
    border-color: $color.text
    color: $color.bg


// inline-logo
.inline-logo
  max-height: 4vmax


// page
.page
  position: relative;

  opacity: 0
  z-index: 1

  width: auto
  //height: auto
  height: 100%

  transform translateY(1vmax) scale(1.1)
  transform-origin 50% 0

  animation hidePreloader_2 1s ease 6.2s
  animation-fill-mode: forwards

// wrap
.wrap
  padding-left: 3.1vmax
  padding-right: 3.1vmax

.wrap__flex
  display: flex;

.we-help .wrap__flex
  align-items: end

.hero .wrap__flex
  position: relative;
  z-index: 2

  flex-direction column
  flex-wrap nowrap
  justify-content flex-start
  align-items: stretch
  align-content stretch

  min-height: 100%
  padding-top: 2.8vmax
  padding-bottom: 2.8vmax
  box-sizing: border-box

@media only screen and (max-width: $mediaQuery2)
  .about .wrap__flex
    flex-direction: column

  .footer .wrap__flex
    flex-direction column
    align-items: stretch;


// section
.section
  position: relative;

  padding: ($step*3.6) 0

.section.about
  padding-top: 0

@media only screen and (min-width: $mediaQuery2)
  .section_increase_indent
    padding: ($step*7) 0

@media only screen and (max-width: $mediaQuery2)
  .we-help .wrap__flex
    align-items: center;
    flex-direction: column;


// link
.link,
.link:visited,
.link:link
  text-decoration: none;

  border-bottom: 0.1em solid
  color: $color.text
  outline none

  //transition: border 0.2s ease
  transition: all 0.2s ease

.link:hover
  padding-bottom: 0.1em;

  text-decoration: none;

  //border-bottom-color: alpha($color.text, 0.3)
  border-bottom-color: darken($color.contrast_0, 20%)
  border-bottom-width: 0.2em
  color: $color.contrast_1


// img
.img
  display: inline-block;

  max-width: 100%
  max-height: 100%
  width: auto
  height: auto

  vertical-align: top;

// logos
.logos
  font-size: 0

  display: inline-block;

  margin-left: 2.5vmax

  vertical-align: middle;
  line-height: 0.9

.logos__item
  display: inline-block;

  margin-left: 0.6vmax

  vertical-align: top;

.logos__item:first-child
  margin-right: 2vmax

.logos__ua
  ico('../img/logos-UA.png')

.logos__hg
  ico('../img/logos-HG.png')

.logos__label
  font-size: 0.9vmax

  display: inline-block;

  vertical-align: top

@media only screen and (max-width: $mediaQuery1)
  .logos
    display: none;



// logo
.logo
  ico('../img/logo.svg')

  display: inline-block;

  vertical-align: top;

  margin-top: -1.4vmax
  margin-left: -1.3vmax

.footer .logo
  ico('../img/logo_white.svg')

nav .logo
  position: fixed;
  top: 7vmax
  right: 0
  left: 0

  display: none;

  margin: auto;

@media only screen and (max-width: $mediaQuery2)
  nav .logo
    display: block



// hero
.hero
  position: relative;

  font-size: 2.2vmax

  display: flex
  z-index: 4

  min-height: 85vh
  padding: 0
  margin-bottom: 4vmax

  background: url('../img/hero-gradient.jpg') no-repeat
  background-size: 100% 140%;

  animation mesh-animation 14s ease-in-out infinite

.hero__body
  flex 0 1 auto


// hero-pics
.hero-pics
  position: absolute;
  //top: 20%
  //left: 0
  //right: 0
  //position: fixed;
  top: 8%
  left: 0
  right: 0


  //display: none;
  display: flex;
  flex-direction: row
  flex-wrap: wrap
  justify-content: space-between
  align-content: space-between
  align-items: center

  width: 80%
  height: 60%
  margin: auto

  pointer-events: none

  gap: 7vmax

.hero-pics__item
  opacity: 0

  flex: 0 1 8vmax
  //padding-bottom: 56%

  transform scale(0.8)

  animation: flickerPhoto 12s ease-in infinite 0s

.hero-pics__item img
  display: inline-block;
  max-width: 100%
  max-height: 100%
  height: auto
  width: auto

  vertical-align: top

random(min,max)
  return floor(math(0, 'random') * (max - min + 1) + min)s

randomGap(min,max)
  return floor(math(0, 'random') * (max - min + 1) + min)vmax

for num in (1..12)
  .hero-pics__item:nth-child({num})
    flex-basis: randomGap(0, 20)

    animation-duration: 12s
    animation-delay: random(0, 24)

.hero-pics_start .hero-pics__item:nth-child(3)
  animation-duration: 8s
  animation-delay: 2s

.hero-pics_start .hero-pics__item:nth-child(5)
  animation-duration: 4s
  animation-delay: 0s

@media only screen and (max-width: $mediaQuery1)
  .hero
    font-size: 3vmax


// highlighted-text
.highlighted-text
  color: $color.contrast_1

.belt_bg_2 .highlighted-text
  color: $color.contrast_0


// header
.header
  font-size: 1.4vmax

  flex: 1 1 auto

  padding-top: $step

  line-height: 0.8;
  vertical-align: top;
  user-select none

@media only screen and (max-width: $mediaQuery2)
  .header
    font-size: 2.3vmax

    position: relative;

    display: flex;
    justify-content: flex-end
    flex-direction column-reverse
    align-items center

    padding-bottom: ($step*6);


// headline
.headline
  font-family: 'NAMU-1750', Serif;
  font-size: 5.1vmax;

  position: relative;

  z-index: 2

  //margin-right: -($step);
  hyphens: auto;

  text-transform: uppercase;
  line-height: 1.18

.hero .headline
  margin-right: -($step);
  margin-bottom: 3vmax

.headline_floating
  margin-bottom: -($step*4);

.headline_self
  padding: 0 ($step*8)

  text-align: center;
  text-indent: ($step*6);

.headline_sub
  font-family: 'Fixel', sans-serif
  font-size: 3.5vmax

  text-transform: none;

.headline__tit
  color $color.contrast_1

.footer .headline
  font-size: 2.6vmax

  padding: 0

  text-indent: 5.8vmax;
  text-transform: uppercase;

  color: alpha($color.bg, 20%)

.we-help__head .headline
  min-width: 40%

.section_increase_indent .headline_self.headline_sub
  mix-blend-mode: color-burn;


@media only screen and (max-width: $mediaQuery2)
  .headline
    font-size: 4.6vmax

    line-height: 1.22

  .hero .headline
    font-size: 5.5vmax

  .hero nav .headline
    font-size: 3vmax

  .footer .headline
    text-indent: 0

  .headline_self
    padding-left: 0
    padding-right: 0

    text-indent: 0

// floating-text
.floating-text
  position: relative;

  display: inline-block;

.floating-text__inline
  position: relative;

  display: inline

  padding: 0 ($step*1.5) $step 0;

  background: $color.bg
  border-radius: $radius

.floating-text__corner_right
  position: absolute;
  right: -($step)
  bottom: 0

  display: inline-block;

  width: ($step*2)
  height: ($step*2)
  margin-bottom: ($step*4);

  background: $color.bg

.floating-text__corner_right:after
  position: absolute;
  top: 49%
  left: 50%

  width: 100%
  height: 100%

  content ''

  background: #77abdb
  border-radius: 50%

.floating-text__corner_left
  position: absolute;
  left: -($step)
  bottom: -($step)

  display: inline-block;

  width: ($step*2)
  height: ($step*2)

  background: $color.bg

.floating-text__corner_left:after
  position: absolute;
  top: 49%
  left: 50%

  width: 100%
  height: 100%

  content ''

  background: #77abdb
  border-radius: 50%


// lang
.lang
  display: inline-block;

  padding-left: $step;
  padding-right: $step;

  vertical-align: top;
  white-space: nowrap

  color: alpha($color.text, 50%)

.lang__active
  color: $color.text

.lang a,
.lang a:visited
  display: inline-block;

  white-space: nowrap

  border-bottom: 0.2em solid transparent
  color: alpha($color.text, 50%)

  transition: all 0.3s ease

.lang a:hover
  padding-bottom: 0.4em

  border-color: $color.contrast_0
  color: $color.contrast_1

@media only screen and (max-width: $mediaQuery1)
  .header .lang
    margin-bottom: ($step*4);

.footer
  .lang
    display: block;

    padding-top: ($step*3);
    padding-bottom: ($step*2);

    color: alpha($color.bg, 50%)

  .lang__active
    color: $color.bg

  .lang a,
  .lang a:visited
    color: alpha($color.bg, 50%)



// nav
nav
  float: right;

  vertical-align: top;
  text-transform: uppercase;
  white-space nowrap

.nav__item,
.nav__item:visited
  font-size: 1.4vmax

  display: inline-block;

  vertical-align: top;
  margin-left: ($step*3)

  text-transform: uppercase;

  color: $color.text

  filter: blur(0);

  transition: filter 0.6s ease

.nav__item:hover
  color: $color.contrast_1
  //filter: blur(2px);

.nav__item:first-child
  margin-left: 0

.nav__label
  display: inline-block;

  vertical-align: top;

  border-bottom: 0 solid transparent

  transition all 0.3s ease

.nav__item:hover .nav__label
  padding-top: 0.2em
  padding-bottom: 0.4em

  border-bottom-width: 0.2em
  border-color: $color.contrast_0

.nav__ico
  display: inline-block;

  margin-left: $step

  vertical-align: top;

  transition: transform 0.3s ease

  transform: rotate(0)

.nav__item:hover .nav__ico
  transform: rotate(10deg)

.nav__ico_arrow
  ico('../img/nav-arrow.svg')

.nav__ico_inst
  ico('../img/nav-inst.svg')

.nav__ico_help
  ico('../img/nav-help.svg')

@media only screen and (max-width: $mediaQuery2)
  nav
    position: fixed;
    top: 0
    left: 0
    bottom: 0
    display: flex
    order: 2;
    flex: 0 1 auto;
    opacity: 0
    visibility: hidden;
    overflow: scroll
    z-index: 100

    width: 100%
    //height: 100%
    padding: ($step*2);
    box-sizing: border-box;

    align-items flex-end
    flex-direction: column;
    justify-content: end;
    text-align: left;
    pointer-events none

    background: url(../img/hero-gradient_3.jpg) no-repeat;
    background-size: 100% 140%;

    transform scale(0.8)

    transition: all 0.2s ease

    animation mesh-animation_2 14s ease-in-out infinite

  .burger_on nav
    opacity: 1
    visibility: visible;

    pointer-events auto
    white-space normal

    transform scale(1)

  .header .nav__item
    font-size: 3.2vmax
    font-weight: 400

    display: flex;

    flex-direction row
    align-items flex-start

    margin: 0 0 ($step*4) 0

  .nav__item
    font-size: 2.3vmax

    display: block;

    margin: 0 0 ($step*2) 0
    //display: flex !important;
    //flex-direction: row-reverse;
    //justify-content: flex-end;

  .belt .nav__item
    padding-top: ($step*2);


// inline-pic
.inline-pic
  font-size: 0

  position: relative;

  display: inline-block;

  margin-right: $step
  height: $inlinePic

  vertical-align: baseline;
  line-height: 0
  text-indent: 0

  border-radius: $radius

.help .inline-pic
  height: $inlinePic*1.7

  vertical-align: middle;

  border-radius: $radius*4

.inline-pic_neighbour
  margin-right: 0

.inline-pic img
  width: auto
  height: 100%

  border-radius: inherit

img.inline-pic_special_img
  position: absolute;
  bottom: 100%
  left: 0

  width: 100%
  height: auto;

@media only screen and (min-width: $mediaQuery2)
  .help_minified .inline-pic
    height: 4vmax

@media only screen and (max-width: $mediaQuery2)
  .inline-pic
    height: 3.6vmax

  .hero .inline-pic
    height: 4.1vmax


// about
//.about
//
.about__side
  flex: 0 1 42.2%

  box-sizing: border-box;
  padding-right: 6.3%


.about__desc
  flex: 0 1 57.58%

  box-sizing: border-box;
  padding-right: 8.4%
  padding-top: ($step*1.2);

.about__desc p
  margin-bottom: 2vmax


// team
.team
  display: flex;
  flex-direction column
  flex-wrap nowrap
  justify-content flex-start
  align-items flex-start
  align-content stretch

  margin: ($step*2) 0

  white-space: nowrap;

.team__row
  display: flex;
  flex-direction row
  flex-wrap nowrap
  justify-content flex-start
  align-items flex-start
  align-content stretch

  line-height: 0
  white-space: nowrap;

.team__plus
  font-size: 9vmax
  font-weight: 180

  opacity: 1

  flex 0 1 100%
  align-self flex-end

  margin-right: -7%

  line-height: 0.2

  transform: rotate(0) scale(1)

  transition: all 0.4s ease 0.4s

.team.hover .team__plus
  opacity: 0

  transform: rotate(-10deg) scale(0.9)

  transition: all 0.4s ease 0.2s

.team__item
  font-size: 0

  position: relative;

  z-index: 0
  overflow: hidden;

  width: 43.3%
  margin-right: -20.3%
  height: auto

  text-align: center
  vertical-align: top;
  line-height: 0

  border-radius: 50%
  border: 3px solid $color.bg

  transition: all 0.4s ease 0.4s

  transform: scale(1)

.team.hover .team__item
//.about .wrap__flex:hover .team__item
  opacity: 0.7

  transform: scale(0.5)
  transition: all 0.4s ease 0.2s

.team.hover .team__item.hover
  opacity: 1 !important
  z-index: 10

  transform: scale(1.3)

  //transition: transform 0.2s ease 0s, opacity 0.2s ease 1s

.team__item:nth-child(1)
  z-index: 2

.team__item:nth-child(2)
  z-index: 1

.team__item:last-child
  margin-right: 0

.team__pic
  width: 100%
  height: auto

  vertical-align: top;

  border-radius: inherit


// we-help
.we-help__head
  margin-bottom: ($step*3)


// mask-photo
.mask-photo
  position: relative;

  z-index: 1

.headline + .mask-photo
  margin-left: -11vmax

.mask-photo__mask
  position: absolute;
  top: -0.7vmax
  left: -0.7vmax

  z-index: 2

  max-width: 105% !important;
  max-height: 105% !important;

@media only screen and (max-width: $mediaQuery2)
  .headline + .mask-photo
    margin-left: 0
    margin-top: $step



// tags
.tags
  padding: 4vmax 0 2vmax 0

.tags__item
  font-size: 3.2vmax
  font-weight: 400

  display: inline-block;

  padding: 0 ($step*2) 0.3vmax ($step*2)
  margin: 0 0.6vmax 0.8vmax 0

  line-height: 1.8
  vertical-align: middle;

  border-radius: $radius * 100
  border: 0.07em solid

@media only screen and (max-width: $mediaQuery2)
  .tags
    padding: ($step*2) 0 ($step*4) 0;

  .tags__item
    font-size: 2.4vmax

    padding: 0 1.8vmax 0.3vmax 1.8vmax


// belt
.belt
  position: relative;

  display: flex;

  padding: ($step*2);
  margin-bottom: 2vmax

  background alpha($color.contrast_0, 80%)
  border-radius: $radius

  transition all 0.3s ease

.belt_bg_0:hover
  padding: ($step*4);

  box-shadow: 0 0 ($step*5) alpha($color.contrast_0, 70%);

.belt_bg_1
  flex-direction column

  padding: ($step*4);

