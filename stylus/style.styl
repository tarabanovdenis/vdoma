  background-size cover
  color $color.bg

.belt_bg_1:hover
  padding: ($step*6) ($step*4);

.belt_bg_2
  font-size: 2vmax

  flex-direction column

  padding: ($step*6) ($step*4)

  background: url(../img/belt-bg_1-1.png) no-repeat 50% 50%;
  background-size cover
  color $color.bg

.belt_bg_2:hover
  padding: ($step*7) ($step*4);

  box-shadow: 0 0 ($step*5) #7e8286

.belt__headline
  font-family: 'NAMU-1750', Serif;
  font-size: 12.5vmax

